<script src="../javascripts/users.js"></script>

{{> navbar}}

<div class="page-header">
    <h1>User's list</h1>      
</div>

<table class="table table-striped" id="users-table">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<button type="button" class="btn btn" id="refresh-btn">Refresh</button>
<button type="button" class="btn btn-primary" id="new-user-btn">New User</button>

<form id="user-form">
  <div class="modal fade" id="user-dlg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit user</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">        
          <div class="form-group">
              <label for="username" class="control-label">Username</label>
              <input type="text" class="form-control" id="username" minlength="2"/>
          </div>
          <div class="form-group">
              <label for="name" class="control-label">Name</label>
              <input type="text" class="form-control" id="name" minlength="1"/>
          </div>
          <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email"/>
          </div>
          <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password"/>
              <label for="check-password">Repeat password</label>
              <input type="password" class="form-control" id="check-password" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="user-save-btn">Save</button>
          <button type="button" class="btn btn-danger" id="user-remove-btn">Remove</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</form>